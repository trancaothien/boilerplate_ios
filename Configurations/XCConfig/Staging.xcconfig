// Configurations/Staging.xcconfig
// Configuration settings for Staging environment

// MARK: - Environment
ENVIRONMENT = Staging
IS_DEBUG = YES

// MARK: - App Identity
APP_NAME = BoilerplateIOS Stg
APP_BUNDLE_IDENTIFIER = com.tt.studio.boilerplate-ios.staging
APP_VERSION = 1.0.0
APP_BUILD_NUMBER = 1

// MARK: - API Configuration
API_BASE_URL = https:$(SLASH_ESCAPE)$(SLASH_ESCAPE)api-staging.example.com
API_TIMEOUT = 30

// MARK: - Feature Flags
ENABLE_LOGGING = YES
ENABLE_ANALYTICS = YES
ENABLE_CRASHLYTICS = YES

// MARK: - Build Settings
SWIFT_ACTIVE_COMPILATION_CONDITIONS = $(inherited) STAGING DEBUG
GCC_PREPROCESSOR_DEFINITIONS = $(inherited) STAGING=1 DEBUG=1
OTHER_SWIFT_FLAGS = $(inherited) -DSTAGING

